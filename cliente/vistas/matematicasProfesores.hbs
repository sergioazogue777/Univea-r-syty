<div class="row mt-3  justify-content-center align-items-center">
    <div class="col col-8 justify-content-center">

        <h3 class=" text-center display-3">
            Profesores
        </h3>
        <hr>
    </div>
</div>

<div class="row  mx-auto  mb-5 justify-content-center align-items-center">
    {{#each profesores}}
    <div class="col m-auto col-md-7 col-sm-8 col-lg-6 rounded p-2 justify-content-center align-items-center">
        <div class="card m-auto mb-3" style="max-width: 28rem;min-width: 27rem;">
            <div class="row g-0 align-content-center">
                <div class="col-md-5 d-flex fondoImagenes rounded align-items-center justify-content-center">
                    <img src="/apuntes/{{this.id}}.jpg" class="m-auto p-3 img-fluid rounded">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title">{{this.nombre}} {{this.apellidos}}</h5>
                        <hr>
                        <p class="card-text">{{this.descripcion}}</p>
                        <p><img class="icono" src="/images/iconoLocalizacion.png">&nbsp;{{this.ciudad}}</p>
                        <p><img class="icono" src="/images/iconoEmail.png">&nbsp;{{this.email}}</p>
                        <p><img class="icono" src="/images/iconoTelefono.png">&nbsp;{{this.telefono}}</p>
                        {{#if this.online}}
                        <p><img class="icono" src="/images/iconoOnline.png">&nbsp;Posibilidad de clase on-line.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
