{{>cabeza}}
{{#if esProfesor}}
{{else}}
<div class="row mt-5  mx-auto  mb-5 justify-content-center align-items-center">
    <div class="col-8 col-md-4 col-sm-6 col-lg-4 rounded bg-dark p-4 justify-content-center align-items-center">

        <form method="post" action="http://localhost:8081/matematicas/profesores" class="mx-auto"
            enctype="multipart/form-data">
            <div class="">
                <h4 class="text-center text-secondary">
                    Date de alta como profesor :)
                </h4>
                <hr>
                <label for="telefono" class="text-secondary form-label">Número de teléfono:</label>
                <input type="text" value="+34 " class="form-control" name="telefono" id="telefono"
                    aria-describedby="emailHelp">
                <label for="ciudad" class="text-secondary form-label">Ciudad:</label>
                <input type="text" class="form-control" name="ciudad" id="ciudad" aria-describedby="emailHelp">
                <label for="email" class="text-secondary form-label">E-mail:</label>
                <input type="text" class="form-control" name="email" id="email" aria-describedby="emailHelp">
                <label for="descripcion" class="text-secondary form-label">Una descripción tuya:</label>
                <textarea name="descripcion" id="descripcion" class="form-control"
                    aria-label="With textarea"></textarea>
                <input class=" mt- 3 form-check-input" type="radio" name="online" id="online">
                <label class="form-label text-secondary" for="online">
                    ¿Das clases online?
                </label>
                <br>
                <label for="foto" class="text-secondary form-label">Una foto tuya:</label>

                <input type="file" class="form-control" name="foto" id="foto" aria-describedby="emailHelp">

                <button type="submit" class="btn mt-2 btn-secondary">Darse de alta</button>
            </div>
        </form>
    </div>
</div>
{{/if}}


