{{>cabeza}}
<div class="row mt-3  justify-content-center align-items-center">
    <div class="col col-8 justify-content-center">

        <h3 class=" text-center display-3">
            Comunidad
        </h3>
        <hr>
    </div>
</div>
<div class="row  mx-auto  mb-5 justify-content-center align-items-center">
    <div class="col-8 col-md-4 col-sm-6 col-lg-4 rounded bg-secondary p-4 justify-content-center align-items-center">
        
        <form method="post" action="http://localhost:8081/castellano/comunidad" class="mx-auto"
            enctype="multipart/form-data">
            <div class="">
                <h4 class="text-center text-primary">
                    Sube tus propios apuntes :)
                </h4>
                <hr>
                <label for="titulo" class="text-primary form-label">Titulo:</label>
                <input type="text" class="form-control" name="titulo" id="titulo" aria-describedby="emailHelp">
                <label for="descripcion" class="text-primary form-label">Descripci√≥n:</label>
                <input type="text" class="form-control" name="descripcion" id="descripcion"
                    aria-describedby="emailHelp">
                <label for="apuntes" class="text-primary form-label">Archivo:</label>
                <input type="file" class="form-control" name="archivo" id="apuntes" aria-describedby="emailHelp">

                <button type="submit" class="btn mt-2 btn-primary">Subir archivo</button>
            </div>
        </form>
    </div>
</div>

<div class="row  mx-auto  mb-5 justify-content-center align-items-center">
    {{#each apuntes}}
    <div class="col mx-auto col-md-5 col-sm-7 col-lg-4 rounded p-2 justify-content-center align-items-center">
        <div class="card mx-auto" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{this.titulo}}</h5>
                <p class="card-text">{{this.descripcion}}</p>
                <p class="card-text"><small class="text-muted">Hecho por {{this.nombreAutor}}</small></p>
            </div>
            <a href="http://localhost:8081/castellano/comunidad?apunte={{this.id}}" class=" btn btn-secondary card-link">Descargar</a>
        </div>
    </div>
{{/each}}
</div>
{{>pie}}